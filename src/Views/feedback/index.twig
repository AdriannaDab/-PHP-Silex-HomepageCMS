{% block feedback %}
    <p>
        <a href="{{ url('/feedback/add', {'idproject': idproject|e }) }}"
           title="Add feedback">
            <button type="button" class="btn btn-success">Dodaj feedback</button>
        </a>
    </p>
    {% for fb in feedback %}
        <div class="col-lg-12 text-center">
            <p>

            <p class="text-center">
                <small> {{ fb.published_date|e }}</small>
            </p>
            <p>
                {{ fb.content|raw }}
            </p>
            </p>
            {% if fb.iduser|e  == access|e %}
                <p>
                    <a href="{{ url('/feedback/edit', {'id': fb.idfeedback|e }) }}"
                       title="Edit feedback">
                        <button type="button" class="btn btn-warning">Edytuj feedback
                        </button>
                    </a>
                    <a href="{{ url('/feedback/delete', {'id': fb.idfeedback|e }) }}"
                       title="Delete feedback">
                        <button type="button" class="btn btn-danger">Usu≈Ñ
                            feedback
                        </button>
                    </a>
                </p>
            {% endif %}
            <hr>
        </div>
    {% endfor %}
{% endblock %}
