{% extends 'layout.twig' %}

{% block content %}
    {% for photo in photos %}
        <hr>
        <h2 class="intro-text text-center">
            {{ photo.title|e }}
        </h2>
        <hr>
        <div class="col-lg-12 text-center">
            <p>
                <img class="img-responsive img-full" src="{{ app.request.basepath }}/media/{{ photo.name }}">
                {% if is_granted('ROLE_ADMIN') %}
            </p><a href="{{ url('/photos/delete',{'name': photo.name|e}) }}"
                   title="Delete Photo">
                <button type="button" class="btn btn-danger">Usu≈Ñ Photo
                </button>
            </a></p>
            {% endif %}
            </p>
            <hr>
        </div>
    {% endfor %}

{% endblock %}